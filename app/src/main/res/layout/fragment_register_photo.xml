<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="70dp">



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/register_img_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="50dp"
                android:layout_gravity="center"
                android:src="@drawable/photo_icon" />



            <TextView
                style="@style/Theme.Instagram1.TextViewBase.Form"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/photo_register_title"
                android:textColor="@color/black"
                android:textSize="30sp" />
            <TextView
                style="@style/Theme.Instagram1.TextViewBase.Form"

                android:layout_gravity="center_horizontal"
                android:text="@string/photo_register_subtitle"
                android:textColor="@color/black" />

            <common.view.LoadingButton
                android:id="@+id/register_btn_next"
                app:text="@string/add_photo"
                style="@style/Theme.Instagram1.Button"/>

            <Button
                android:id="@+id/register_btn_jump"
                android:text="@string/jump"
                style="@style/Theme.Instagram1.Link"/>


        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

